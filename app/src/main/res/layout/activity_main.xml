<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:fitsSystemWindows="true">

    <!-- HEADER IP -->
    <TextView
        android:id="@+id/ipText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:text="http://0.0.0.0:8080"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/qrImage"
        app:layout_constraintHorizontal_bias="0" />

    <!-- ICON QR CODE MIC, ÃŽN DREAPTA IP-ULUI -->
    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        android:background="#000000"
        android:contentDescription="Cod QR pentru adresa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ipText"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- WEBVIEW CHAT -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ipText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>